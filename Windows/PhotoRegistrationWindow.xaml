<Window x:Class="AEGEE_Project.Windows.PhotoRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AEGEE_Project.Windows"
        mc:Ignorable="d"
        Title="PhotoRegistrationWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Height="200"  Name="image" Stretch="Fill"  Width="200" Grid.ColumnSpan="2"/>
        <Button x:Name="Browse" Width="200" Height="40" Grid.Row="1" Grid.Column="0" Content="Browse" Click="Browse_Click"/>
        <Button x:Name="Save" Width="200" Height="40" Grid.Row="1" Grid.Column="1" Content="Save" Click="Save_Click"/>
    </Grid>
</Window>
